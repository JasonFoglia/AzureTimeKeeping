{
    "manifest_version": 3,
    "name": "Azure DevOps Tickets",
    "version": "1.0",
    "description": "Displays Azure DevOps tickets and tracks time",
    "permissions": [
        "activeTab",
        "storage",
        "identity",
        "alarms"
    ],
    "host_permissions": [
        "https://dev.azure.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "temporal-16.png",
            "48": "temporal-16.png",
            "128": "temporal-16.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "temporal-16.png",
        "48": "temporal-16.png",
        "128": "temporal-16.png"
    }
}